[safe]
	directory = /etc/nixos
[user]
	email = muterjeffery@gmail.com
	name = JeffMuter
[alias]
    # Check if SSH is working with GitHub
    ssh-check = !bash -c 'echo "Testing SSH connection to GitHub..." && ssh -T git@github.com'
    

    ssh-generate = !bash -c 'echo "Generating new SSH key..." && ssh-keygen -t ed25519 -C "$(git config user.email)" -f ~/.ssh/id_ed25519 -N "" && eval "$(ssh-agent -s)" && ssh-add ~/.ssh/id_ed25519 && echo "New public key (add this to GitHub):" && cat ~/.ssh/id_ed25519.pub'

    ssh-print = ![ -f ~/.ssh/id_ed25519.pub ] && echo \"Current public key:\" && cat ~/.ssh/id_ed25519.pub || echo \"No SSH key found\"

    saorsa = "!f() { \n    branch=$(git branch --show-current); \n    echo \"Current branch: $branch\"; \n    git fetch origin $branch; \n    ahead=$(git rev-list --count origin/$branch..HEAD); \n    behind=$(git rev-list --count HEAD..origin/$branch); \n    echo \"Ahead: $ahead, Behind: $behind\"; \n    git add . && git commit -m \"$1\" && { git pull origin $branch || { echo \"Pull failed - aborting\"; exit 1; }; } && git push origin $branch; \n}; f"

