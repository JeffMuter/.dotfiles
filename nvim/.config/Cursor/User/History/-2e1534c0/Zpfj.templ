package components

templ Button(text string, isPrimary bool, isLarge bool) {
<button class={ 
    "btn transition-all duration-200 hover:scale-105", 
    templ.KV("btn-primary", isPrimary),
    templ.KV("btn-secondary", !isPrimary),
    templ.KV("btn-lg", isLarge),
    templ.KV("shadow-lg hover:shadow-xl", isPrimary)
}>
    { text }
</button>
}

templ Input(label string, inputType string, name string, placeholder string) {
<div class="form-control w-full">
    <label class="label">
        <span class="label-text text-base-content/80">{ label }</span>
    </label>
    <input 
        type={ inputType } 
        name={ name } 
        placeholder={ placeholder } 
        class="input input-bordered bg-base-100 border-base-300 focus:border-primary focus:outline-none w-full" 
    />
</div>
} 