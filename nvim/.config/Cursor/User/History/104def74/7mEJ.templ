package components

templ Card(title string) {
<div class="card">
    <h2>{ title }</h2>
    <form>
        <div class="form-group">
            <label>Your Message</label>
            <textarea name="message" class="form-control" placeholder="Type your message here..."></textarea>
        </div>
        @Button("Send Message", true, false)
    </form>
</div>
}

templ SimpleCard(title string) {
<div class="card">
    <h2>{ title }</h2>
    <p>This is a simple card component for { title }.</p>
</div>
} 