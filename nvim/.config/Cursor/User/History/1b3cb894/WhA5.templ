package pages

import (
    "goDial/internal/templates/components"
    "goDial/internal/templates/layouts"
)

templ Home() {
    @layouts.Base("Home") {
        <div class="hero min-h-screen bg-base-200">
            <div class="hero-content text-center">
                <div class="max-w-md">
                    <h1 class="text-5xl font-bold">Welcome to goDial</h1>
                    <p class="py-6">Your new favorite application is ready to go!</p>
                    <components.Button text="Get Started" variant={ components.Primary } size={ components.Large }/>
                </div>
            </div>
        </div>
        <div class="container mx-auto p-8">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <components.Card title="Quick Message"/>
                <components.Card title="Send Feedback"/>
                <components.Card title="Contact Us"/>
            </div>
        </div>
    }
} 